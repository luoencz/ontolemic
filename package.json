{
  "name": "inner-cosmos",
  "version": "1.0.0",
  "description": "Personal website with Python code execution",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev || true",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build || true",
    "serve": "ENV_SERVICE_FILE=./ops/systemd/.env.systemd ./ops/systemd/run.sh",
    "status": "systemctl status inner-cosmos-backend",
    "logs": "journalctl -u inner-cosmos-backend -f",
    "restart": "systemctl restart inner-cosmos-backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
